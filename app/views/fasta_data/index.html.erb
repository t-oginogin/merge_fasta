<h1>Listing fasta_data</h1>

<%= form_tag fasta_data_merge_path, :method => :get do %>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Id</th>
        <th>File Name</th>
        <th>Data</th>
        <th>Last Updated</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @fasta_data.each do |fasta_datum| %>
        <tr>
          <td><%= check_box_tag "targets[#{fasta_datum.id}]", true, true %>
          <td><%= fasta_datum.id %></td>
          <td><%= fasta_datum.filename %></td>
          <td><%= br fasta_datum.data.truncate(60) %></td>
          <td><%= fasta_datum.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= link_to 'Show', fasta_datum %></td>
          <td><%= link_to 'Destroy', fasta_datum, method: :delete, data: { confirm: 'destroy file?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br/>
  <%= submit_tag 'Merge Fasta', class: "btn btn-primary" %>
<% end %>

<br/>
<div>
  <%= form_tag fasta_data_upload_path, :method => :post, :multipart => true do %>
    <div class="row">
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
    <%= file_field_tag 'uploads[]', :multiple => true %>
    </div>
    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
    <%= submit_tag 'Add Files', class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
</div>

<br/>
<div>
<%= button_to 'Destroy All Files', fasta_data_destroy_all_path, method: :get, data: { confirm: 'destroy all files?' }, class: "btn btn-danger" %>
</div>

